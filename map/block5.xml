		<Obj x="360" y="170" w="60" h="30" type="1" img="block/block.png" />
		
		<Obj x="220" y="80" w="60" h="30" type="2" img="block/block.png" />
		<Obj x="280" y="80" w="60" h="30" type="2" img="block/block.png" />
		
		<Obj x="190" y="110" w="60" h="30" type="3" img="block/block.png" />
		<Obj x="250" y="110" w="60" h="30" type="3" img="block/block.png" />
		<Obj x="310" y="110" w="60" h="30" type="3" img="block/block.png" />
		
		<Obj x="150" y="140" w="60" h="30" type="4" img="block/block.png" />
		<Obj x="270" y="140" w="60" h="30" type="4" img="block/block.png" />
		<Obj x="330" y="140" w="60" h="30" type="4" img="block/block.png" />
		
		<Obj x="450" y="80" w="60" h="30" type="5" img="block/mysteryBlock.png"/>
