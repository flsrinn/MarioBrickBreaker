<?xml version="1.0" encoding="euc-kr" ?> 
<BlockBreakGame>
<GameScreen>
	<ScreenSize w="800" h="600"></ScreenSize>
</GameScreen>
<StartPanel>
	<Background>
		<BgImg>background/background1.png</BgImg>
		<Music>audio/start.wav</Music>
	</Background>
</StartPanel>
<GamePanel>
	<Background>
		<BgImg>background/background1.png</BgImg>
		<Music>audio/themesong.wav</Music>	
	</Background>
	<Block>
		<Obj x="250" y="50" w="60" h="30" type="1" img="block/block.png" />
		<Obj x="120" y="170" w="60" h="30" type="1" img="block/block.png" />
		<Obj x="180" y="170" w="60" h="30" type="1" img="block/block.png" />
		<Obj x="240" y="170" w="60" h="30" type="1" img="block/block.png" />
