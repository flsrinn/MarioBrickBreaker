<?xml version="1.0" encoding="euc-kr" ?> 
<BlockBreakGame>
<GameScreen>
	<ScreenSize w="800" h="600"></ScreenSize>
</GameScreen>
<StartPanel>
	<Background>
		<BgImg>background1.png</BgImg>
		<Music>start.wav</Music>
	</Background>
</StartPanel>
<GamePanel>
	<Background>
		<BgImg>background1.png</BgImg>
		<Music>themesong.wav</Music>	
	</Background>
	<Block>
		<Obj x="180" y="210" w="60" h="30" type="1" img="block.png"/>
		<Obj x="390" y="210" w="60" h="30" type="1"  img="block.png"/>
		
		<Obj x="10" y="170" w="60" h="30" type="2" img="block.png"/>
		<Obj x="250" y="280" w="60" h="30" type="2" img="block.png"/>
		<Obj x="400" y="40" w="60" h="30" type="2" img="block.png" />
		
		<Obj x="30" y="80" w="60" h="30" type="3" img="block.png" />
		<Obj x="240" y="100" w="60" h="30" type="3" img="block.png" />
		<Obj x="470" y="130" w="60" h="30" type="3" img="block.png" />
		
		<Obj x="60" y="240" w="60" h="30" type="4" img="block.png" />
		<Obj x="120" y="30" w="60" h="30" type="4" img="block.png" />
		<Obj x="440" y="260" w="60" h="30" type="4" img="block.png" />
		
		<Obj x="300" y="200" w="60" h="30" type="5" img="mysteryBlock.png" />
		<Obj x="260" y="20" w="60" h="30" type="5" img="mysteryBlock.png" />
		<Obj x="120" y="130" w="60" h="30" type="5" img="mysteryBlock.png"/>
	
		<Obj x="150" y="80" w="60" h="30" type="6" img="unBlock.png" />
		<Obj x="340" y="120" w="60" h="30" type="6" img="unBlock.png"/>
	</Block>
	<Player>
		<Ball>
			<Obj w="30" h="30" balls="1" speed="2" img="shell.png"/>
		</Ball>
		<Paddle>
			<Obj x="130" y="475" w="70" h="50" type="1"  img="paddle.png" />
		</Paddle>
		<Shooter>
			<Obj x="150" y="510" w="50" h="40" type="1" img="shooter.png"/>
		</Shooter>
		<Bullet>
			<Obj w="60" h="40" type="1" img="player/bullet.png"/>
		</Bullet>
	</Player>
</GamePanel>
<ScorePanel>
	<Life>
		<Music>decreaseLife.wav</Music>
		<Heart>
			<Obj life="5" img="heart.png"/>
		</Heart>
	</Life>
</ScorePanel>
<ItemPanel>
	<Background>
		<BgImg>animalBackground.png</BgImg>
	</Background>
</ItemPanel>
<GameOverPanel>
	<Background>
		<BgImg>background1.png</BgImg>
		<Music>gameover.wav</Music>
	</Background>
</GameOverPanel>
<GameClearPanel>
	<Background>
		<BgImg>background1.png</BgImg> 
		<Music>gameclear.wav</Music>	
	</Background>
</GameClearPanel>
</BlockBreakGame>
